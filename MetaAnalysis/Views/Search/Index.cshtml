@model MetaAnalysis.ViewModels.SearchViewModel


<h1>@ViewBag.title</h1>

<form action="/Search/Results">
    <h2>Search by:</h2>

    <p>
        @foreach (KeyValuePair<string, string> column in Model.ColumnChoices)
        {
            <span>
                <input type="radio"
                       name="column"
                       id="@column.Key"
                       value="@column.Key"
                       checked="@column.Key == 'all''" />
                <label for="@column.Key">@column.Value</label>
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="value" id="searchTerm" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (Model.Studies != null)
{

    <h3> Result(s)</h3>

    @foreach (Dictionary<string, string> item in Model.Studies) 
    {
        <table class="study-listing">

           
            <tr>
                @foreach (KeyValuePair<string, string> pair in item)
                {
                    <td>@pair.Value</td>

                }

            </tr>

            
        </table>
      
    }
}