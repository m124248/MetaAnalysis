@model MetaAnalysis.ViewModels.SearchViewModel


<h1>@ViewBag.title</h1>

<form action="/Search/Results">
    <h2>Search by:</h2>

    <p>
        @foreach (KeyValuePair<string, string> column in Model.ColumnChoices)
        {
            <span>
                <input type="radio"
                       name="searchType"
                       id="@column.Key"
                       value="@column.Key"
                       checked="@column.Key == 'all''" />
                <label for="@column.Key">@column.Value</label>
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="searchTerm" id="searchTerm" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (Model.Studies != null)
{

    <h3> Result(s)</h3>

    @foreach (var study in Model.Studies)
    {
        <table class="study-listing">
            
           
            <tr>
                <td>@study.Id</td>
                <td>@study.PublicationYear</td>
                <td>@study.N</td>
                <td>@study.R</td>
                <td>@study.VariablesControlled</td>
                <td>@study.StudyDesign</td>
                <td>@study.AdherenceMeasure</td>
                <td>@study.ConscientiousnessMeasure</td>
                <td>@study.MeanAge</td>
                <td>@study.MethodologicalQuality</td>
            </tr>

            
        </table>
      
    }
}